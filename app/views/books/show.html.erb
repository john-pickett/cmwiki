<p id="notice"><%= notice %></p>
<h1><%= @book.title %></h1>
<h2>By: <%= @book.author %></h2>
<div class="col-md-8">

  <div class="row">
    <div class="col-md-6">
      <div class="mdc-card">
        <h4>Published date:</h4>
        <%= @book.published_date %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mdc-card">
        <h4>Category:</h4>
        <%= @book.category %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mdc-card">
        <h4>Setting:</h4>
        <%= @book.setting %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mdc-card">
        <h4>Recommended age:</h4>
        <%= @book.recommended_age %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mdc-card">
        <h4>Sensitive content:</h4>
        <%= @book.sensitive_content %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mdc-card">
        <h4>Book synopsis:</h4>
        <%= @book.book_synopsis %>
      </div>
    </div>
  </div>

  <div id="chapterSummaries">
    <div id="accordion" role="tablist">

    <% @chapters.each_with_index do | chapter, index | %>
      <div class="mdc-card">
        <div class="card-header" role="tab" id="heading<%=index%>">
          <h4 class="mb-0">
            <a data-toggle="collapse" href="#collapse<%=index%>">
              <%= chapter.title %>
              <span class="pull-right">AA</span>
            </a>
          </h4>
        </div>

        <div id="collapse<%=index%>" class="collapse" role="tabpanel">
          <div class="card-body">
            <%= raw(chapter.summary) %>
          </div>
        </div>
      </div>
      <% end %>
      </div>
    </div>
</div> <!-- end of left column -->

<div class="col-md-4 pull-right">
  <% if !current_user %>
    <%= link_to 'Login To Edit', new_user_session_path, class: 'btn btn-info' %><br>
  <% elsif current_user || authorized?(current_user, @book) %><br>
    <%= link_to 'Edit This Book', edit_book_path(@book), class: 'btn btn-success' %><br>
  <% end %>

  <%= link_to 'Back to All Books', books_path, class: 'btn btn-info' %><br>
  <% if current_user && current_user.role == "awesome" %>
    <%= link_to 'Delete This Book', @wiki, method: :delete, data: { confirm: 'Are you sure you want to delete this wiki?' }, class: 'btn btn-danger'%>
  <% end %>
</div>
