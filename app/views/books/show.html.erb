<p id="notice"><%= notice %></p>
<h1><%= @book.title %></h1>
<div class="col-md-8">

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Published date:</strong>
  <%= @book.published_date %>
</p>

<p>
  <strong>Category:</strong>
  <%= @book.category %>
</p>

<p>
  <strong>Setting:</strong>
  <%= @book.setting %>
</p>

<p>
  <strong>Recommended age:</strong>
  <%= @book.recommended_age %>
</p>

<p>
  <strong>Sensitive content:</strong>
  <%= @book.sensitive_content %>
</p>

<p>
  <strong>Book synopsis:</strong>
  <%= @book.book_synopsis %>
</p>

<div id="chapterSummaries">
  <div id="accordion" role="tablist">

  <% @chapters.each_with_index do | chapter, index | %>
    <div class="card">
      <div class="card-header" role="tab" id="heading<%=index%>">
        <h5 class="mb-0">
          <a data-toggle="collapse" href="#collapse<%=index%>">
            <%= chapter.name %>
          </a>
        </h5>
      </div>

      <div id="collapse<%=index%>" class="collapse" role="tabpanel">
        <div class="card-body">
          <%= chapter.body %>
        </div>
      </div>
    </div>
    <% end %>
    </div>
  </div>
</div> <!-- end of left column -->

<div class="col-md-4 pull-right">
  <% if !current_user %>
    <%= link_to 'Login To Edit', new_user_session_path, class: 'btn btn-info' %><br>
  <% elsif current_user || authorized?(current_user, @book) %><br>
    <%= link_to 'Edit This Book', edit_book_path(@book), class: 'btn btn-success' %><br>
  <% end %>

  <%= link_to 'Back to All Books', books_path, class: 'btn btn-info' %><br>
  <% if current_user && current_user.role == "awesome" %>
    <%= link_to 'Delete This Book', @wiki, method: :delete, data: { confirm: 'Are you sure you want to delete this wiki?' }, class: 'btn btn-danger'%>
  <% end %>
</div>
