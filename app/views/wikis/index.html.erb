<h1>All Wikis Index</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Preview</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= wiki.name %></td>
        <td><%= wiki.body %></td>
        <td><%= wiki.category %></td>
        <td><%= link_to 'Show', wiki %></td>
        <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
        <td><%= link_to 'Delete', wiki, method: :delete, data: { confirm: 'Are you sure you want to delete this wiki?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wiki', new_wiki_path %>
