<h1>Books Index</h1>

<div class="row">
  <div class="col-md-10">
    <table>
      <thead>
        <tr>
          <th><%= link_to "Name", :sort => "name" %></th>
          <th><%= link_to "Author", :sort => "author" %></th>
          <th><%= link_to "Category", :sort => "category" %></th>
          <th>Preview</th>
        </tr>
      </thead>

      <tbody>
        <% @wikis.each do |wiki| %>
          <tr>
            <td><%= link_to wiki.name, wiki %></td>
            <td><%= wiki.author %></td>
            <td><%= wiki.category %></td>
            <td><%= truncate(wiki.body, :length => 80) %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-2">
    <% if current_user %>
      <%= link_to 'Create New Wiki', new_wiki_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
