<h1>Books Index</h1>

<div class="row">
  <div class="col-md-10">
    <p>Sort By:
      <%= link_to "Title", wikis_path(order: 'name') %>
      <%= link_to "Author", wikis_path(order: 'author') %>
      <%= link_to "Category", wikis_path(order: 'category') %>
    </p>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Preview</th>
          <th>Author</th>
          <th>Category</th>
        </tr>
      </thead>

      <tbody>
        <% @wikis.each do |wiki| %>
          <tr>
            <td><%= link_to wiki.name, wiki %></td>
            <td><%= truncate(wiki.body, :length => 80) %></td>
            <td><%= wiki.author %></td>
            <td><%= wiki.category %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-2">
    <% if current_user %>
      <%= link_to 'Create New Wiki', new_wiki_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
