<h1>Books Index</h1>

<div class="row">
  <div class="col-md-10">
    <p>Sort By:
      <%= link_to "Title", wikis_path(order: 'name') %>
      <%= link_to "Author", wikis_path(order: 'author') %>
      <%= link_to "Category", wikis_path(order: 'category') %>
    </p>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Preview</th>
          <th>Author</th>
          <th>Category</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @wikis.each do |wiki| %>
          <tr>
            <td><%= link_to wiki.name, wiki %></td>
            <td><%= truncate(wiki.body, :length => 80) %></td>
            <td><%= wiki.author %></td>
            <td><%= wiki.category %></td>
            <td><%= link_to 'Show', wiki %></td>
            <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
            <td><%= link_to 'Delete', wiki, method: :delete, data: { confirm: 'Are you sure you want to delete this wiki?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-2">
    <%= link_to 'Create New Wiki', new_wiki_path, class: 'btn btn-success' %>
  </div>
</div>
