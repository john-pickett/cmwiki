<h1><%= @wiki.name %></h1>
<h3>By: <%= @wiki.author %> </h3>

<%= markdown(@wiki.body) %>

<% if !current_user %>
  <%= link_to 'Login To Edit', new_user_session_path, class: 'btn btn-info' %> |
<% elsif current_user && @wiki.public_access == false %>
    <p>Private Wiki</p>
<% elsif (current_user && @wiki.public_access == true) || authorized?(current_user, @wiki) %>
  <%= link_to 'Edit This Wiki', edit_wiki_path(@wiki), class: 'btn btn-success' %> |
<% end %>

<%= link_to 'Back to All Wikis', wikis_path, class: 'btn btn-info' %>
<% if current_user && current_user.role == "awesome" %>
  | <%= link_to 'Delete This Wiki', @wiki, method: :delete, data: { confirm: 'Are you sure you want to delete this wiki?' }, class: 'btn btn-danger'%>
<% end %>
